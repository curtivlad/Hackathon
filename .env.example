# ─── Google Gemini LLM Configuration ────────────────────────────────────────
# Obtine cheia de la: https://aistudio.google.com/apikey
GEMINI_API_KEY=your-gemini-api-key-here

LLM_MODEL=gemini-2.0-flash
LLM_ENABLED=true
LLM_CALL_INTERVAL=0.6
LLM_TIMEOUT=4.0
LLM_MAX_TOKENS=300

# ─── Server ─────────────────────────────────────────────────────────────────
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# ─── Security ───────────────────────────────────────────────────────────────
V2X_HMAC_KEY=schimba-aceasta-cheie-in-productie
API_TOKEN=schimba-acest-token-in-productie
REST_RATE_LIMIT=30
AGENT_STALE_TIMEOUT=5.0
BROADCAST_RATE_LIMIT=10
MAX_WS_CONNECTIONS=20

# ─── CORS ───────────────────────────────────────────────────────────────────
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

